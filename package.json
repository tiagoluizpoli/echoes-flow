{
  "name": "echoes-flow",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:front": "yarn workspace frontend dev",
    "dev:back": "yarn workspace backend dev",
    "dev": "concurrently --prefix '[{name}]' \"yarn dev:front\" \"yarn dev:back\"",
    "lint": "exec biome check --write backend frontend"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3"
  }
}