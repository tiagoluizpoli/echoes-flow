{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!src/components/ui",
			"!src/route-tree.gen.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 80,
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noChildrenProp": "off",
				"noUnusedImports": {
					"options": {},
					"level": "error",
					"fix": "safe"
				}
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "off"
			},
			"a11y": {
				"noStaticElementInteractions": "off"
			},
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"strictCase": true,
						"requireAscii": true,
						"filenameCases": [
							"kebab-case"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}